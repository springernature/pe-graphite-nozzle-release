#!/usr/bin/env bash

set -e
set -u

PACKAGE="golang1.6"
VERSION="1.6.2"
FILE="go${VERSION}.linux-amd64.tar.gz"
URL=https://storage.googleapis.com/golang/go${VERSION}.linux-amd64.tar.gz

if [ ! -s "${PACKAGE}/${FILE}" ]; then
  echo "Downloading ${URL} ..."
  mkdir -p ${PACKAGE}
  curl -s "${URL}" -o "${PACKAGE}/${FILE}"
fi
